{% extends ':layout:master.html.twig' %}
{% block customStylesheet %}
    <link rel="stylesheet" href="{{ asset('Article/articleBase.css') }}"/>
    <link rel="stylesheet" href="{{ asset('Article/plugin/textEditor/jquery-te-1.4.0.css') }}"/>
    {#<script src="{{ asset('Video/youtubeOpt.js') }}"></script>#}

{% endblock %}

{% block content %}
    <section id="article-add">
        <div class="col-lg-12">
            <h3 class="page-header"><i class="fa fa-video-camera"></i> Videos</h3>
            <ol class="breadcrumb">
                <li><i class="fa fa-file-text-o"></i><a href="{{ path('video-main') }}">Videos</a></li>
                <li class="active"><i class="fa fa-eye"></i>All</li>
            </ol>
        </div>
        <div class="input-feild col-md-6">
            <label for="searchHeading">Search</label>
            <input type="text" id="searchStack"/>
        </div>
        <div class="input-feild col-md-6">
            <button class="btn btn-success stackReq">Search</button>
        </div>
        <div class="col-md-12 answers">
            <div class="col-lg-6 col-sm-6">
                <ul id="issues-collection" class="collection">
                    <li class="collection-item avatar">
                        <i class="fa fa-bug circle red darken-2"></i>
                        <span class="collection-header">Issues</span>
                        <p>Assigned to you</p>
                        <a href="#" class="secondary-content"><i class="fa fa-star"></i></a>
                    </li>
                    <li class="collection-item">
                        <div class="row">
                            <div class="col s7">
                                <p class="collections-title"><strong>#102</strong> Home Page</p>
                                <p class="collections-content">Web Project</p>
                            </div>
                            <div class="col s2">
                                <span class="task-cat pink accent-2">P1</span>
                            </div>
                            <div class="col s3">
                                <div class="progress">
                                    <div class="determinate" style="width: 70%"></div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>
{% endblock %}

{% block customScripts %}
    <script>
        $('.stackReq').on('click',function(){
            var searchStr = $('#searchStack').val();
            $.get('http://api.stackexchange.com/2.2/search?order=desc&sort=relevance&tagged='+searchStr+'&site=stackoverflow', function(data){
                renderResponseList(data.items);
            });

            function renderResponseList(questions){
                container = $('.answers');
                container.empty();
                $.each(questions, function(i, obj){
                    console.log(obj);
                    var title = obj.title;
                    var views = obj.view_count;
                    var linkQ = obj.question_id;
                    var answCount = obj.answer_count;
                    var score = obj.score;
                    var answerID = obj.accepted_answer_id;
                    var date = new Date(obj.creation_date * 1000) ;
                    var markup = "<div class='col-lg-6 col-sm-6'>" +
                            "<ul id='issues-collection' class='collection'>" +
                            "<li class='collection-item avatar'>" +
                            "<i class='fa fa-bug circle red darken-2'></i>" +
                            "<a href=http://stackoverflow.com/questions/"+linkQ+"><span class='collection-header'>"+title +"</span></a>" +
                            "<p class='date right'>"+date.toDateString()+"</p>"+
                            "<a href='#' class='secondary-content'><i class='fa fa-star'></i></a>" +
                            "</li>" +
                            "<li class='collection-item'>" +
                            "<div class='row'>" +
                            "<div class='col s7'>" +
                            "<p  class='collections-title'><b>answer count:</b>"+answCount+"</p>"+
                            "<p  class='collections-title'><b>score:</b>"+score+"</p>"+
                            "<p class='collections-content'><a href='http://stackoverflow.com/a/"+answerID +"'>See accepted answer</a></p>" +
                            "</div>" +
                            "</div>" +
                            "</li>" +
                            "</ul>" +
                            "</div>";
                    container.append(markup);
                });

            }

            function renderResponseCard(questions){
                container = $('.answers');
                container.empty();
                $.each(questions, function(i, obj){
                    console.log(obj);
                    var col = $('<div>', {'class': 'col-md-6 col-lg-4'});
                    var card = $('<div>', {'id':'profile-card', 'class':'card'});
                    var cardImgDiv= $('<div>', {'class':'card-image waves-effect waves-block waves-light'});
                    var title = $('<p>', {'class':'activator','text':obj.title});
                    var imgAvatar = $('<img>', {'class':'circle responsive-img activator card-profile-image','src':obj.owner.profile_image});
                    var cardContent = $('<div>', {'class':'card-content'});
                    var buttonActivator = $('<a>', {'class':'btn-floating activator btn-move-up waves-effect waves-light darken-2 right'});
                    var icoActivator = $('<i>', {'class':'fa fa-plus'});
                    var span = $('<span>', {'class':'card-title activator grey-text text-darken-4', 'text':obj.title});
                    var info = $('<p>', {'text':obj.tags[0], 'class':'card-title activator grey-text text-darken-4'});
                    var cardReveal = $('<div>', {'class':'card-reveal'});
                    var cardRevealTitle = $('<span>', {'class':'card-title grey-text text-darken-4', 'text':obj.title});
                    var cardRevealClose = $('<i>', {'class':'fa fa-times'});
                    container.append(col.append(card.append(cardImgDiv.append(title)).append(cardContent.append(imgAvatar).append(buttonActivator.append(icoActivator)).append(info)).append(cardReveal.append(cardRevealTitle.append(cardRevealClose)))));
                });
            }
        });
    </script>

{% endblock %}
